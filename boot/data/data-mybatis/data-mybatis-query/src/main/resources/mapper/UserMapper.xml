<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="spring.boot.data.mybatis.mapper.UserMapper" >

    <select id="selectByMap" parameterType="map" resultType="userPO">
      select * from t_user limit #{page},#{size}
    </select>

    <select id="selectByObject" parameterType="userPO" resultType="userPO">
      select * from t_user where name=#{name} and id=#{id}
    </select>

    <select id="selectById" parameterType="integer" resultType="userPO">
      select * from t_user where id=#{id}
    </select>

    <select id="selectLike" parameterType="String" resultType="userPO">
      select * from t_user where name like "%"#{name}"%"
    </select>

</mapper>