<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="spring.boot.data.mybatis.mapper.TeacherMapper" >

  <update id="updateTeacher" parameterType="spring.boot.data.mybatis.po.TeacherPO" >
      <selectKey keyProperty="id" resultType="int" order="BEFORE">
          select user_id from t_teacher where school_id=#{school}
      </selectKey>
      update t_teacher set course=#{course} where school_id=#{school}
  </update>

</mapper>